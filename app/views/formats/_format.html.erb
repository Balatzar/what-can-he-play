<div id="<%= dom_id format %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= format.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this format", format, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this format', edit_format_path(format), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
